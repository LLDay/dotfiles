# bspwm hotkeys
#
# Cleanly quit bspwm
super + shift + Escape
	bspc quit 1
#
# Window manipulation
# ______________
# Close window
super + q
	bspc node -c

# Kill window
super + shift + q
	bspc node -k

super + t
	{bspc node -t floating,bspc node -t tiled}

# Toggle fullscreen
super + shift + f
	bspc node -t {fullscreen,tiled}

# Try to keep size and position of the selected window
super + o
	bspc node -g private

# Make window sticky
super + i
	bspc node -g sticky

# Lock a window from closing
super + Escape
	bspc node -g locked

#
# Window moving and splitting
# ______________

# Move current window to largest space or preselected area if there is one.
super + shift + Return
    windowpromoter

# go (Shift=move) to desktop (and focus the monitor that the desktop is located on. Bspwm style)
super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} ^{1-9,10}

super + alt  + {h,j,k,l}
    bspc node -p {west,south,north,east}

super + alt + {1-9}
	bspc node -o 0.{1-9}

super + alt + space
    bspc node -p cancel

#Focus windows by direction, works with multihead
super + {h,j,k,l}
    bspc node --focus {west,south,north,east}

super + {Left,Down,Up,Right}
    bspc node --focus {west,south,north,east}

# Move tiled windows. Moving a tiled window to
# preselected one moves into preselection instead.
# Moving out of the screen should move the window to next monitor if possible
super + shift + {h,j,k,l}
	euclid_mover {west,south,north,east}

# Different style of movement: transplant into window in chosen direction
super + shift + {Left,Down,Up,Right}
	euclid_mover {west,south,north,east}

#resize windows
super + ctrl + {h,j,k,l}
	bspwm_resize {west,south,north,east}

super + ctrl + {Left,Down,Up,Right}
	bspwm_resize {west,south,north,east}
#
# Layout manipulation/desktop level controls
# ______________

# Toggle monocle mode
super + f
	bspc desktop -l next

# Balance tree
super + b
	bspc node @/ {-B,-E}

# Mirror and flip leaves of tree
super + {comma,period}
	bspc node @/ -F {horizontal,vertical}

# Rotate leaves of tree
super + shift + {comma,period}
	bspc node @/ -R {90,270}

# Change window gap
super + button{4,5}
	bspc config -d focused window_gap $((`bspc config -d focused window_gap` {+,-} 2 ))

# run applications
super + space
    dmenu_open_app

super + Return
	$TERMINAL

super + shift + s
	dmenu_open_site

super + shift + b
    $BROWSER

super + shift + p
    dmenu_pacman

super + shift + t
	telegram-desktop

super + shift + v
    code

super + shift + w
    libreoffice --writer

super + shift + m
    mailspring

super + shift + o
    $TERMINAL -e $SHELL -ic " lfcd; $SHELL"

super + shift + u
    $TERMINAL -e $SHELL -ic " upd"

Print
	flameshot gui

#
# Media keys
#

XF86AudioRaiseVolume
    pactl set-sink-volume 0 +1%

XF86AudioLowerVolume
    pactl set-sink-volume 0 -1%

XF86AudioMute
    pactl set-sink-mute 0 toggle

XF86MonBrightness{Down,Up}
    light {-U,-A} 20 && light -O

