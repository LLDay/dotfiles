#!/bin/sh

wal -R && source ~/.config/polybar/launch.sh &
source ~/.fehbg &

xsetroot -cursor_name left_ptr &
export GTK2_RC_FILES="$HOME/.gtkrc-2.0" &
xrdb -merge ~/.Xresources &

update_edited &
urxvtd -q &
picom -b &
sxhkd &
light -I &
fc-cache -fv &
devmon &
dunst &

# wallpaper_changer starts with cron

## powersaving options
xset dpms 0 0 300 &
xset s noblank &
xset s noexpose &

## Run screenlock when suspending
light-locker &

