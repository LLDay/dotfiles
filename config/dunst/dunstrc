[global]
markup = full
plain_text = no
sort = no

format = "<b>%s</b>\n%b"
font = Anonymous Pro 12
indicate_hidden = yes
alignment = center

bounce_freq = 0
word_wrap = yes
show_age_threshold = -1
ignore_newline = no

stack_duplicates = yes
hide_duplicates_count = yes

geometry = "300x50-5+25"
shrink = no
transparency = 5
idle_threshold = 300

monitor = 0
follow = none

sticky_history = yes
history_length = 15
show_indicators = no

line_height = 5
separator_height = 2
padding = 6
horizontal_padding = 6

# Define a color for the separator.
# possible values are:
#  * auto: dunst tries to find a color fitting to the background;
#  * foreground: use the same color as the foreground;
#  * frame: use the same color as the frame;
#  * anything else will be interpreted as a X color.
separator_color = frame
startup_notification = false

dmenu = /usr/bin/dmenu -p dunst:
browser = /usr/bin/firefox -new-tab

icon_position = off
max_icon_size = 80
frame_width = 3

[shortcuts]
close = ctrl+space
close_all = ctrl+shift+space
history = ctrl+grave

[urgency_low]
frame_color = "#191311"
foreground = "#3B7C87"
background = "#191311"
timeout = 4

[urgency_normal]
frame_color = "#191311"
foreground = "#3B7C87"
background = "#191311"
timeout = 6

[urgency_critical]
frame_color = "#191311"
foreground = "#ff9578"
background = "#191311"
