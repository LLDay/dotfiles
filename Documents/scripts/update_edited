#!/bin/bash
# There is no update_edited_progs program name. This name
# is used to find and restart entr scripts using pkill
ps -eo pid,cmd | rg -i update_edited_progs | awk '{print $1}' | head --lines=-1 | xargs -r kill

echo ~/.config/sxhkd/sxhkdrc | entr -p sh -c "update_edited_progs || pkill -USR1 -x sxhkd" &
echo ~/.fehbg | entr -p sh -c "update_edited_progs || source $HOME/.fehbg" &

BSPWM_DIRS="$HOME/.config/bspwm/bspwmrc"
BSPWM_DIRS+="\n$HOME/.config/bspwm/autostart"
BSPWM_DIRS+="\n$HOME/.Xresources"
for f in ~/.config/polybar/*; do
    BSPWM_DIRS+="\n$f"
done

echo -e $BSPWM_DIRS | entr -p sh -c "update_edited_progs || $HOME/.config/bspwm/bspwmrc" &
